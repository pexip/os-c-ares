#!/usr/bin/make -f

DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

%:
	dh $@ --with autoreconf

override_dh_auto_configure:
	dh_auto_configure -- --enable-shared --enable-symbol-hiding

override_dh_auto_install:
	dh_auto_install --
	mkdir debian/tmp/usr/include/$(DEB_HOST_MULTIARCH)
	mv debian/tmp/usr/include/ares_build.h debian/tmp/usr/include/$(DEB_HOST_MULTIARCH)/
